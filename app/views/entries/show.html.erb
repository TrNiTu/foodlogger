<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%= DateTime.now.to_fs(:custom_date_format) %>
<% end%>
<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @entry.meal_type %>
      </p>
      <p class="panel-block">
        Calories: <%= @entry.calories %>
      </p>
      <p class="panel-block">
        Proteins: <%= @entry.proteins %>
      </p>
      <p class="panel-block">
        Carbohydrates: <%= @entry.carbohydrates %>
      </p>
      <p class="panel-block">
        fats: <%= @entry.fats %>
      </p>
    </nav>
    <div class="column is-mobile">
      <div class="column">
        <%= link_to "Edit this entry", edit_entry_path(@entry), class: "button is-gray" %> |
        <%= link_to "Delete", @entry, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "button is-gray" %>
      </div>
    </div>
    <div class="column">
      <!-- -->
    </div>
  </div>
</div>
